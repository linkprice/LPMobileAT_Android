task androidReleaseDeleteOldJar(type: Delete) {
//    delete 'build/release/com.LPMobileAT.lpmat-0.1.1.jar'
//    delete fileTree(dir: "build/release/", exclude: "dont_delete.txt")
    delete "build/libs/com.linkprice.lpmat-1.0.0.jar"
}

// http://stackoverflow.com/questions/28805607/exclude-buildconfig-class-and-r-class-from-android-library-jar-in-gradle
// app/build/libs/com.LPMobileAT.lpmat-0.1.0.jar
task androidReleaseJar(type: Jar) {

    from "build/intermediates/classes/release/"

    archiveName 'com.linkprice.lpmat-1.0.0.jar'

    exclude '**/InstallReceiver.class'
    exclude '**/InstallReceiver2.class'
    exclude '**/MainActivity.class'
    exclude '**/MainActivity$*.class'
    exclude '**/BuildConfig.class'
    exclude '**/R.class'
    exclude '**/R$*.class'
}

androidReleaseJar.dependsOn(androidReleaseDeleteOldJar, assembleRelease)